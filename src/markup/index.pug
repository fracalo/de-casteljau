doctype html
head
  link(href='app.css', rel='stylesheet')
  link(href='https://fonts.googleapis.com/css?family=Space+Mono', rel='stylesheet')
  title De Casteljau Demo
section.ui
  a(href="https://github.com/fracalo/de-casteljau", target="_blank")
    h3 De-Casteljau Demo
  form
    fieldset
      input#t(type='range', min='0', value='50', max='100')
      label(for='t')
        | interpolation 
        span 0.50
    fieldset.animation-ui
      .animation-ui__title
        p Animation UI
      button.animation-ui__button(type='submit') ANIMATE
      .animation-ui__input
        label(for='anim-ui-from') from
        input#anim-ui-from.animation-ui__input__number(type='number', min='0', value='0', max='1', step='0.05')
      .animation-ui__input
        label(for='anim-ui-to') to
        input#anim-ui-to.animation-ui__input__number(type='number', min='0', value='1', max='1', step='0.05')
      .animation-ui__iteration
        .animation-ui__iteration__title
          | Iteration
        .animation-ui__iteration__item
          label.animation-ui__iteration__label(for='anim-ui-rewind') rewind
          input#anim-ui-rewind.animation-ui__input__checkbox(name='iteration', type='radio', checked)
        .animation-ui__iteration__item
          label.animation-ui__iteration__label(for='anim-ui-rewind') forward 
          input#anim-ui-once.animation-ui__input__checkbox(name='iteration', type='radio')
        .animation-ui__iteration__item.animation-ui__iteration__item--revealer
          label.animation-ui__iteration__label(for='anim-ui-cycle') cycles 
          input#anim-ui-cycle.animation-ui__input__checkbox(name='count', type='checkbox')
          .reveal-if-active.animation-ui__iteration__item
            label.reveal-if-active__label.animation-ui__iteration__label(for='anim-ui-cycle-qt') qt:
            input#anim-ui-cycle-qt.reveal-if-active__input.animation-ui__input__number(type='text')
            
      .animation-ui__time
        .animation-ui__time__title
          | Time
        div.animation-ui__time__item
          label.animation-ui__time__label(for='anim-ui-base-time') duration (s)
          input#anim-ui-duration.animation-ui__time__item__number(name='base-speed', type='number', value=3, min=0.2, step=0.1)
svg(viewbox='-350 -300 700 600')
